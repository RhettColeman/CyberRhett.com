#Style a specific object:
<a href="/pageroute" style={{
                    color: "white",
                    backgroundColor: "#3812e0",
                    borderRadius: "8px"
                }}>

#Use State (useState hook)
import { useState } from 'react'

const [name, setName] = useState('Mario'); //setName is a variable to change into. 'Mario' doesn't have to be a string it can be any data type.

const handleClick = () => {
        setName('Luigi');
    }